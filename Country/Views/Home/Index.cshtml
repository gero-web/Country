@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">

<div class="validation" asp-validation-summary="ModelOnly"></div>

@using (Html.BeginForm("OneCountry", "Home", FormMethod.Get))
{
    <p>
        <label>Название страны</label><br />
        <input type="text" name="name" placeholder="Введите название страны!" />
    </p>
    <button type="submit" class="btn btn-primary">Ок!</button>
    <button type="reset" class="btn btn-danger">Отмена!</button>
}
    <div class="m-4">
        <a asp-action="AllCountry" type="button" class="btn btn-primary"> Все страны</a>
    </div>
</div>